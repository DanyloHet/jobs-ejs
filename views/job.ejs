<%- include("partials/head") %>
<%- include("partials/header") %>

<h2><%= job ? "Edit Job" : "Add New Job" %></h2>

<form method="POST" action="<%= job ? `/jobs/update/${job._id}` : "/jobs" %>">
  <div>
    <label for="company">Company:</label>
    <input type="text" name="company" id="company" value="<%= job ? job.company : "" %>" required />
  </div>
  <div>
    <label for="position">Position:</label>
    <input type="text" name="position" id="position" value="<%= job ? job.position : "" %>" required />
  </div>
  <div>
    <label for="status">Status:</label>
    <input type="text" name="status" id="status" value="<%= job ? job.status : "" %>" required />
  </div>

  <input type="hidden" name="_csrf" value="<%= _csrf %>">

  <button type="submit"><%= job ? "Update" : "Create" %></button>
  <a href="/jobs">
    <button type="button">Cancel</button>
  </a>
</form>

<%- include("partials/footer") %>
